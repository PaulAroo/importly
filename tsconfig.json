{
	"compilerOptions": {
		"rootDir": "s",
		"outDir": "x",
		"target": "es2020",
		"lib": ["esnext", "dom"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"s/**/*.ts",
		"s/**/*.js"
	],
	"exclude": [
		"s/**/_*"
	],
}
